{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
      "outDir": "dist",
      "lib": ["es2018", "dom"],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        }
      ]
    }
  }